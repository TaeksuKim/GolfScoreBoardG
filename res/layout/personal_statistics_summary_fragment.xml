<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <!-- 5경기 -->

        <TextView
            style="?attr/listSectionHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fragment_personal_statistics_summary_recent_five_games" />

        <include
            android:id="@+id/Recent5SummaryItem"
            layout="@layout/personal_statistics_summary_item" />

        <!-- 이번 달 -->

        <TextView
            style="?attr/listSectionHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fragment_personal_statistics_summary_this_month" />

        <include
            android:id="@+id/ThisMonthSummaryItem"
            layout="@layout/personal_statistics_summary_item" />

        <!-- 지난 달 -->

        <TextView
            style="?attr/listSectionHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fragment_personal_statistics_summary_last_month" />

        <include
            android:id="@+id/LastMonthSummaryItem"
            layout="@layout/personal_statistics_summary_item" />

        <!-- 최근 3개월 -->

        <TextView
            style="?attr/listSectionHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fragment_personal_statistics_summary_recent_three_months" />

        <include
            android:id="@+id/Last3MonthSummaryItem"
            layout="@layout/personal_statistics_summary_item" />
    </LinearLayout>

</ScrollView>