<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="4dip"
    android:paddingLeft="0dip"
    android:paddingRight="0dip"
    android:paddingTop="4dip"
    tools:context=".MainActivity" >
    
    <!--
    
    android:background="?android:attr/activatedBackgroundIndicator" 
     -->

    <TextView
        android:id="@+id/HoleNumberTextView"
        style="?attr/listSectionHeader"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

    <!-- Ranking 1 -->

    <RelativeLayout
        android:id="@+id/Ranking1Panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/HoleNumberTextView" >

        <TextView
            android:id="@+id/Ranking1TextView"
            android:layout_width="50dip"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textAppearance="?attr/textAppearanceSmall"
            android:textColor="?attr/secondaryTextColor1" />

        <TextView
            android:id="@+id/Fee1TextView"
            android:layout_width="90dip"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="?attr/preferredItemPaddingRight"
            android:gravity="center_vertical|right"
            android:textAppearance="?attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/FinalScore1TextView"
            android:layout_width="40dip"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/Fee1TextView"
            android:gravity="center_vertical|right"
            android:textAppearance="?attr/textAppearanceMedium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Handicap1TextView"
            android:layout_width="25dip"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/FinalScore1TextView"
            android:gravity="center_vertical|right"
            android:textAppearance="?attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/Score1TextView"
            android:layout_width="25dip"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/Handicap1TextView"
            android:gravity="center_vertical|right"
            android:textAppearance="?attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/Name1TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/Score1TextView"
            android:layout_toRightOf="@+id/Ranking1TextView"
            android:gravity="center_vertical|left"
            android:textAppearance="?attr/textAppearanceMedium" />
    </RelativeLayout>

