<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/ButtonPanel"
        style="?attr/borderlessButtonPanel"
        android:layout_alignParentBottom="true" >

        <ImageView
            android:id="@+id/UpperDivider"
            style="?attr/borderlessButtonHorizontalDivider"
            android:contentDescription="@string/divider" />

        <ImageView
            android:id="@+id/ButtonVerticalDivider"
            style="?attr/borderlessButtonVerticalDivider"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/divider" />

        <Button
            android:id="@+id/CancelButton"
            style="?attr/borderlessButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/ButtonVerticalDivider"
            android:text="@android:string/cancel"
            android:visibility="visible" />

        <Button
            android:id="@+id/BackButton"
            style="?attr/borderlessButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/ButtonVerticalDivider"
            android:text="@string/back"
            android:visibility="gone" />

        <Button
            android:id="@+id/ConfirmButton"
            style="?attr/borderlessButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/ButtonVerticalDivider"
            android:text="@android:string/ok"
            android:visibility="gone" />

        <Button
            android:id="@+id/NextButton"
            style="?attr/borderlessButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/ButtonVerticalDivider"
            android:text="@string/next"
            android:visibility="visible" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ButtonPanel" >

        <FrameLayout
            android:id="@+id/GameSettingContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible" />

        <FrameLayout
            android:id="@+id/HoleFeeSettingContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible" />

        <FrameLayout
            android:id="@+id/RankingFeeSettingContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible" />

        <FrameLayout
            android:id="@+id/PlayerSettingContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible" />

        <FrameLayout
            android:id="@+id/HandicapSettingContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible" />
    </RelativeLayout>

</RelativeLayout>