                    android:textAppearance="?attr/textAppearanceMedium"
                    android:textColor="?attr/secondaryTextColor" />
            </RelativeLayout>

            <RelativeLayout android:id="@+id/Player6View" >

                <View
                    android:id="@+id/Player6TagView"
                    android:layout_width="match_parent"
