<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dip"
    android:layout_marginTop="4dip"
    android:orientation="vertical"
    android:paddingBottom="4dip"
    android:paddingTop="4dip"
    tools:context=".MainActivity" >

    <View
        android:id="@+id/PlayerTagView"
        android:layout_width="34dip"
        android:layout_height="54dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="#ccff4444" />

    <ImageView
        android:id="@+id/PlayerImageView"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="4dip"
        android:contentDescription="@string/player"
        android:scaleType="fitCenter"
        android:src="@drawable/face_unknown_r" />

    <TextView
        android:id="@+id/PlayerNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="54dip"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dip"
        android:layout_toRightOf="@+id/PlayerImageView"
        android:gravity="center"
        android:textAppearance="?attr/textAppearanceLarge"
        android:textColor="?attr/primaryTextColor" />

    <TextView
        android:id="@+id/HandicapTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="54dip"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dip"
        android:layout_toRightOf="@+id/PlayerNameTextView"
        android:gravity="center"
        android:text="핸디캡"
        android:textAppearance="?attr/textAppearanceSmall"
        android:textColor="?attr/secondaryTextColor" />

    <TextView
        android:id="@+id/HandicapTextView"
        android:layout_width="40dip"
        android:layout_height="54dip"
        android:layout_centerVertical="true"
        android:layout_marginLeft="4dip"
        android:layout_toRightOf="@+id/HandicapTitleTextView"
        android:gravity="center"
        android:text="47"
        android:textAppearance="?attr/textAppearanceLarge" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dip"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dip"
        android:layout_toRightOf="@+id/HandicapTextView"
        android:baselineAligned="false"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/AttendCountTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="게임 수"
                android:textAppearance="?attr/textAppearanceSmall"
                android:textColor="?attr/secondaryTextColor" />

            <TextView
                android:id="@+id/AttendCountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dip"
                android:layout_toRightOf="@+id/AttendCountTitleTextView"
                android:textAppearance="?attr/textAppearanceSmall" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/AvgScoreTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="점수"
                android:textAppearance="?attr/textAppearanceSmall"
                android:textColor="?attr/secondaryTextColor" />

            <TextView
                android:id="@+id/AvgScoreTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dip"
                android:layout_toRightOf="@+id/AvgScoreTitleTextView"
                android:textAppearance="?attr/textAppearanceSmall" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>