<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dip"
    android:layout_marginTop="8dip"
    android:orientation="vertical"
    android:paddingBottom="4dip"
    android:paddingTop="4dip"
    tools:context=".MainActivity" >

    <RelativeLayout
        android:id="@+id/LargeView"
        android:layout_width="match_parent"
        android:layout_height="80dip" >

        <View
            android:id="@+id/LargeTagView"
            android:layout_width="match_parent"
            android:layout_height="30dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dip"
            android:background="#ccff4444" />

        <ImageView
            android:id="@+id/LargeImage"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8dip"
            android:contentDescription="@string/player"
            android:scaleType="fitCenter"
            android:src="@drawable/face_unknown_r" />

        <TextView
            android:id="@+id/LargeNameTextView"
            android:layout_width="100dip"
            android:layout_height="30dip"
            android:layout_alignTop="@+id/LargeImage"
            android:layout_marginLeft="8dip"
            android:layout_marginTop="8dip"
            android:layout_toRightOf="@+id/LargeImage"
            android:gravity="center"
            android:textAppearance="?attr/textAppearanceMedium"
            android:textColor="#ffffffff" />

        <TextView
            android:id="@+id/LargeScoreTextView"
            android:layout_width="40dip"
            android:layout_height="50dip"
            android:layout_below="@+id/LargeNameTextView"
            android:layout_marginLeft="8dip"
            android:layout_toRightOf="@+id/LargeImage"
            android:gravity="center"
            android:textAppearance="?attr/textAppearanceLarge"
            android:textColor="?attr/primaryTextColor" />

        <TextView
            android:id="@+id/LargeTotalFeeTextView"
            android:layout_width="100dip"
            android:layout_height="50dip"
            android:layout_below="@+id/LargeNameTextView"
            android:layout_marginLeft="8dip"
            android:layout_toRightOf="@+id/LargeScoreTextView"
            android:gravity="center"
            android:textAppearance="?attr/textAppearanceLarge"
            android:textColor="?attr/primaryTextColor" />

        <Button
            android:id="@+id/LargeShowMoreButton"
            android:layout_width="60dip"
            android:layout_height="50dip"
            android:layout_alignParentRight="true"
            android:layout_alignWithParentIfMissing="true"
            android:layout_below="@+id/LargeNameTextView"
            android:layout_marginRight="8dip"
            android:background="@drawable/ic_expand"
            android:focusable="false"
            android:gravity="center_vertical|left"
            android:textAppearance="?attr/textAppearanceSmall" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/MediumView"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:visibility="gone" >

        <View
            android:id="@+id/MediumTagView"
            android:layout_width="match_parent"
            android:layout_height="25dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="4dip"
            android:background="#ccff4444" />

        <ImageView
            android:id="@+id/MediumImage"
            android:layout_width="80dip"
            android:layout_height="60dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8dip"
            android:contentDescription="@string/player"
            android:scaleType="fitCenter"
            android:src="@drawable/face_unknown_r" />

        <TextView
            android:id="@+id/MediumNameTextView"
            android:layout_width="100dip"
            android:layout_height="25dip"
            android:layout_alignTop="@+id/MediumImage"
            android:layout_marginLeft="8dip"
            android:layout_marginTop="4dip"
            android:layout_toRightOf="@+id/MediumImage"
            android:gravity="center"
            android:textAppearance="?attr/textAppearanceMedium"
            android:textColor="#ffffffff" />

        <TextView
            android:id="@+id/MediumScoreTextView"
            android:layout_width="40dip"
            android:layout_height="35dip"
            android:layout_below="@+id/MediumNameTextView"
            android:layout_marginLeft="8dip"
            android:layout_toRightOf="@+id/MediumImage"
            android:gravity="center"
            android:textAppearance="?attr/textAppearanceMedium"
            android:textColor="?attr/primaryTextColor" />

        <TextView
            android:id="@+id/MediumTotalFeeTextView"
            android:layout_width="100dip"
            android:layout_height="35dip"
            android:layout_below="@+id/MediumNameTextView"
            android:layout_marginLeft="8dip"
            android:layout_toRightOf="@+id/MediumScoreTextView"
            android:gravity="center"
            android:textAppearance="?attr/textAppearanceMedium"
            android:textColor="?attr/primaryTextColor" />

        <Button
            android:id="@+id/MediumShowMoreButton"
            android:layout_width="60dip"
            android:layout_height="35dip"
            android:layout_alignParentRight="true"
            android:layout_alignWithParentIfMissing="true"
            android:layout_below="@+id/MediumNameTextView"
            android:layout_marginRight="8dip"
            android:background="@drawable/ic_expand"
            android:focusable="false"
            android:gravity="center_vertical|left"
            android:textAppearance="?attr/textAppearanceSmall" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/DetailView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" >

        <Button
            android:id="@+id/PersonalStatisticsButton"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="4dip"
            android:focusable="false"
            android:text="개인 통계"
            android:textAppearance="?attr/textAppearanceSmall" />

        <RelativeLayout
            android:id="@+id/DetailMainView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/PersonalStatisticsButton"
            android:gravity="center" >

            <android.support.v7.widget.GridLayout
                android:id="@+id/DetailScoreView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                app:columnCount="5" >

                <TextView
                    android:id="@+id/TotalOriginalScoreTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textAppearance="?attr/textAppearanceMedium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dip"
                    android:layout_marginRight="4dip"
                    android:text="@string/minus"
                    android:textAppearance="?attr/textAppearanceSmall" />

                <TextView
                    android:id="@+id/TotalHandicapTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceMedium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dip"
                    android:layout_marginRight="4dip"
                    android:text="@string/minus"
                    android:textAppearance="?attr/textAppearanceSmall" />

                <TextView
                    android:id="@+id/TotalExtraScoreTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceMedium" />
            </android.support.v7.widget.GridLayout>

            <android.support.v7.widget.GridLayout
                android:id="@+id/DetailFeeView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/DetailScoreView"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                app:columnCount="3" >

                <TextView
                    android:id="@+id/HoleFeeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textAppearance="?attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/HoleRankingFeeGap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dip"
                    android:layout_marginRight="4dip"
                    android:gravity="center"
                    android:text="@string/plus"
                    android:textAppearance="?attr/textAppearanceSmall"
                    android:textColor="?attr/secondaryTextColor1" />

                <TextView
                    android:id="@+id/RankingFeeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textAppearance="?attr/textAppearanceMedium" />
            </android.support.v7.widget.GridLayout>

            <android.support.v7.widget.GridLayout
                android:id="@+id/DetailAvgView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/DetailFeeView"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                app:columnCount="2" >

                <TextView
                    android:id="@+id/AvgOverParTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dip"
                    android:textAppearance="?attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/AvgRankingTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dip"
                    android:textAppearance="?attr/textAppearanceMedium" />
            </android.support.v7.widget.GridLayout>

            <android.support.v7.widget.GridLayout
                android:id="@+id/HandicapView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/DetailAvgView"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginBottom="4dip"
                android:layout_marginTop="4dip"
                android:layout_toLeftOf="@+id/PersonalStatisticsButton"
                android:alignmentMode="alignBounds"
                android:gravity="center"
                app:columnCount="4"
                app:columnOrderPreserved="false" >

                <TextView
                    android:id="@+id/HandicapTitleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="24dip"
                    android:layout_marginRight="4dip"
                    android:gravity="center"
                    android:text="@string/fragment_current_score_handicap"
                    android:textAppearance="?attr/textAppearanceSmall"
                    android:textColor="?attr/secondaryTextColor1" />

                <TextView
                    android:id="@+id/HandicapTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="24dip"
                    android:layout_marginLeft="4dip"
                    android:layout_marginRight="8dip"
                    android:gravity="center"
                    android:textAppearance="?attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/RemainHandicapTitleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="24dip"
                    android:layout_marginLeft="8dip"
                    android:layout_marginRight="4dip"
                    android:gravity="center"
                    android:text="@string/fragment_current_score_remain_handicap"
                    android:textAppearance="?attr/textAppearanceSmall"
                    android:textColor="?attr/secondaryTextColor1" />

                <TextView
                    android:id="@+id/RemainHandicapTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="24dip"
                    android:layout_marginLeft="4dip"
                    android:layout_marginRight="4dip"
                    android:gravity="center"
                    android:textAppearance="?attr/textAppearanceMedium" />
            </android.support.v7.widget.GridLayout>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>